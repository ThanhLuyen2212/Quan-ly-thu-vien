@using QLThuVien.Controllers
@using QLThuVien.Areas.Admin.Model
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
}

<div class="content-wrapper" style="margin-bottom:20px">
    <div class="row">
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Số tài khoản độc giả</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">

                                <h2 class="mb-0">Có @Session["Độc giả"] độc giả trong thư viện</h2>

                            </div>

                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Số lượng sách</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">Có @Session["Số sách"] cuốn sách trong thư viện</h2>

                            </div>

                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Số phiếu mượn</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">Có @Session["Số phiếu mượn"] phiếu mượn</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-monitor text-success ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-5 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Số phiếu mượn chưa được trả</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">Có @Session["Số phiếu mượn chưa được trả"] phiếu mượn đang được mượn</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Số lượng sách đang được mượn</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">Có @ViewBag.SoLuongSachDangDuocMuon cuốn sách đang được mượn</h2>

                            </div>

                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Thống kê doanh thu theo sách</h2>
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="color:white">
                                    Tên sách
                                </th>

                                <th style="color:white">
                                    Số cuốn sách đã được mượn
                                </th>
                                <th style="color:white">
                                    Số sách còn sử dụng
                                </th>

                                <th style="color:white">
                                    Số sách hư hỏng
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (ThongKeTheoSach item in ViewBag.ThongKeTheoSach)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSach)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoSachDUocMuon)
                                    </td>
                                    <td> @item.SoSachConSuDungDuoc </td>
                                    <td>
                                        <div>@Html.DisplayFor(modelItem => item.SoSachHuHong) </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>




    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Thống kê doanh thu theo độc giả</h2>
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="color:white">
                                    Tên độc giả
                                </th>

                                <th style="color:white">
                                    Số lượng sách đã mượn
                                </th>
                                <th style="color:white">
                                    Số tiền đã phạt
                                </th>

                                <th style="color:white">
                                    Doanh thu
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (ThongKeTheoDocGia item in ViewBag.ThongKeTheoDocGia)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDocGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuongSachMuon)
                                    </td>
                                    <td>
                                        <div> @item.SoTienPhat VND</div>
                                    </td>
                                    <td>
                                        <div class="money">@Html.DisplayFor(modelItem => item.doanhThu) VND </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>








</div>