@model IEnumerable<QLThuVien.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách sách trong thư viện</h2>

            <a href="~/Admin/AdminSaches/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một cuốn sách mới</button>
            </a>

            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên sách" name="IDSach">
            </form>
            <div class="table-responsive">
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                IDSach
                            </th>
                            <th style="color:white">
                                Tên sách
                            </th>
                            <th style="color:white">
                                Tác giả
                            </th>
                            <th style="color:white">
                                Ngày xuất bản
                            </th>
                            <th style="color:white">
                                Số lượng
                            </th>
                            <th style="color:white">
                                Hình ảnh
                            </th>
                            <th style="color:white">
                                Thể loại
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSach)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TacGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayXuatBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    <img src="@Url.Content(item.HinhAnh)" style="width: 100px; height: 150px; border-radius:0%" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TheLoai1.NameCate)
                                </td>

                                <td>

                                    <a href="~/Admin/AdminSaches/Details/@item.IDSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminSaches/Edit/@item.IDSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminSaches/Delete/@item.IDSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietSaches/Index/?IDSach=@item.IDSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-light btn-fw">Chi tiết các cuốn sách</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>