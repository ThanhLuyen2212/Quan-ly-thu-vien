@model IEnumerable<QLThuVien.Models.DocGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách độc giả trong thư viên</h2>


            <a href="~/Admin/AdminDocGias/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một độc giả mới</button>
            </a>

            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên độc giả" name="TenDG">
            </form>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                ID độc giả
                            </th>
                            <th style="color:white">
                                Tên độc giả
                            </th>
                            <th style="color:white">
                                Điện thoại
                            </th>
                            <th style="color:white">
                                Địa chỉ
                            </th>
                            <th style="color:white">
                                UserName
                            </th>
                            <th style="color:white">
                                Password
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDDG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>

                                <td>

                                    <a href="~/Admin/AdminDocGias/Details/@item.IDDG">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminDocGias/Edit/@item.IDDG">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminDocGias/Delete/@item.IDDG">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                    <a href="~/Admin/AdminDocGias/PrintViewToPdf/@item.IDDG">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-light btn-fw">Làm thẻ sinh viên</button>
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>          
        </div>
    </div>
</div>