@model QLThuVien.Models.ChiTietSach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ban có muốn xóa chi tiết cuốn sách này không???</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên sách</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Sach.TenSach)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Tình trạng </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TinhTrang)
                    </div>
                </div>

                <a href="~/Admin/AdminChiTietSaches/Edit/@Model.IDChiTietSach">
                    
                </a>


            </form>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">                  
                    <button style="width:100px; type="submit" value="Delete" class="btn btn-primary mr-2">Delete</button>
                </div>
            }
            <a href="~/Admin/AdminChiTietSaches/Index">
                <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
            </a>
        </div>
    </div>
</div>