@model IEnumerable<QLThuVien.Models.ChiTietSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách chi tiết các cuốn sách</h2>


            <a href="~/Admin/AdminChiTietSaches/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một cuốn sách mới</button>
            </a>

            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo ID của cuốn sách" name="IDsach">
            </form>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                ID Sách
                            </th>
                            <th style="color:white">
                                Tên sách
                            </th>
                            <th style="color:white">
                                ID Chi tiết các cuốn sách
                            </th>
                            <th style="color:white">
                                Tình trạng
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sach.TenSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDChiTietSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TinhTrang)
                                </td>
                                <td>

                                    <a href="~/Admin/AdminChiTietSaches/Details/@item.IDChiTietSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietSaches/Edit/@item.IDChiTietSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietSaches/Delete/@item.IDChiTietSach">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <a href="~/Admin/AdminSaches/Index">
                <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>

            </a>

        </div>
    </div>
</div>