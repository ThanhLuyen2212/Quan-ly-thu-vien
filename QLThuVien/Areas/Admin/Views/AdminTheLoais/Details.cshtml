@model QLThuVien.Models.TheLoai

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chi tiết thể loại</h2>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết của cuốn sách</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên thể loại</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NameCate)
                    </div>
                </div>                
                <a href="~/Admin/AdminTheLoais/Edit/@Model.IDCate">
                    <button style="width:100px; type="button" class="btn btn-primary mr-2">Edit</button>
                </a>

                <a href="~/Admin/AdminTheLoais/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>


            </form>
        </div>
    </div>
</div>