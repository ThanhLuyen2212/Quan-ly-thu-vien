@model QLThuVien.Models.CT_PM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<h3>Bạn có thực sự muốn xóa chi tiết phiếu mượn này không</h3>


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết phiếu mượn</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên độc giả</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenDG)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên sách</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Sach.TenSach)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Số lượng </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.SoLuong)
                    </div>
                </div>

            </form>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">

                    <button style="width:180px; type="submit" value="Delete" class="btn btn-primary mr-2">Delete</button>
                </div>

                <a href="~/Admin/AdminCT_PM/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            }
        </div>
       

    </div>
</div>