@model QLThuVien.Models.Admin

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết của Admin</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên độc giả</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenAdmin)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Điện thoại </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DienThoai)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Địa chỉ </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DiaChi)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">UserName</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Passowrd </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Password)
                    </div>
                </div>

                <a href="~/Admin/AdminsRegister/Edit/@Model.IDAdmin">
                    <button style="width:100px; type="button" class="btn btn-primary mr-2">Edit</button>
                </a>

                <a href="~/Admin/AdminsRegister/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>


            </form>
        </div>
    </div>
</div>