@model IEnumerable<QLThuVien.Models.CT_PM>
@{
    ViewBag.Title = "CacCuonSachDaMuon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shop-cart spad">
    <div class="container">
        <h2 style="margin-bottom:70px;text-align:center">Các cuốn sách đã mượn</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Tên cuốn sách</th>
                                <th>Tác giả</th>
                                <th>Thể loại</th>
                                <th>Ngày mượn</th>
                                <th>Ngày trả</th>
                                <th>Trạng thái</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="cart__product__item">
                                        @{
                                            var base64 = Convert.ToBase64String(item.Sach.HinhAnh);
                                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img src='@imgSrc' style="width: 100px; height: 150px; border-radius:0%" />                                       
                                        <div class="cart__product__item__title">
                                            <h6> @item.Sach.TenSach</h6>

                                        </div>
                                    </td>
                                    <td class="cart__price">@item.Sach.TacGia</td>
                                    <td class="cart__price">@item.Sach.TheLoai1.NameCate</td>
                                    <td class="cart__total">@item.PhieuMuon.NgayMuon</td>
                                    <td class="cart__total">@item.PhieuMuon.NgayTra</td>
                                    <td class="cart__total">@item.PhieuMuon.TrangThai1.TenTrangThai</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <a href="~/Sach/index">Trở về</a>
                </div>
            </div>
        </div>
    </div>
</section>

