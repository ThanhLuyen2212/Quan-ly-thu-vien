@model QLThuVien.Models.Sach
@{
    ViewBag.Title = "Chi tiet cuon sach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product__details__pic">
                        @{
                            var base64 = Convert.ToBase64String(Model.HinhAnh);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        <img src='@imgSrc' style="width:400px"/>

                       @* <img width="400px" src="@Url.Content(Model.HinhAnh)" alt="">*@


                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product__details__text">
                        <h3>@Model.TenSach </h3>
                        <div style="font-size:22px;margin:10px">Tác giả: @Model.TacGia</div>
                        <div style="font-size: 22px; margin: 10px">Thể loại: @Model.TheLoai1.NameCate</div>

                        <p style="font-size: 18px; margin: 10px">Số lượng: @Model.SoLuong</p>

                        <div class="product__details__button" style="margin-top:20px">
                            <a href="~/GioSach/Addto/@Model.IDSach" class="cart-btn">Mượn sách</a>

                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <div style="background-color:black;height:2px; margin-bottom:30px"><p>.</p></div>
                        <h3 style="text-align: center; font-style: unset; margin-bottom: 30px">Mô tả sản phẩm</h3>

                        
                            <h6>@Model.MoTa</h6>

                        
                    </div>
                </div>
            </div>           
        </div>
    </section>
    <!-- Product Details Section End -->



